<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ddgj.fragment.HomeFragment">
    <RelativeLayout
        style="@style/ActionBarTheme">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:drawableRight="@mipmap/ic_expand_more_white_24dp"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:text="西安" android:visibility="gone"/>
        <ImageView
            android:id="@+id/search"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_search_white_24dp"/>
        <TextView
            style="@style/TitleBarTextTheme"
            android:text="@string/app_name"/>
    </RelativeLayout>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list"
            android:name="com.ddgj.fragment.HomeFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="LinearLayoutManager"
            tools:listitem="@layout/fragment_home"/>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
